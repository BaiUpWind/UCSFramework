<UserControl x:Class="DisplayBorder.Controls.ChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DisplayBorder.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border Background="#9bddff" Margin="10,10,10,0"></Border>
            <TextBlock HorizontalAlignment="Center" x:Name="txtTitle" VerticalAlignment="Center" Foreground="#000075" FontSize="28">统计信息</TextBlock>
        </Grid>

        <Grid Grid.Row="1"  Margin="10,0,10,10">
            <Border Grid.Column="0" Grid.Row="0"  Style="{StaticResource BorderStyle2}"   />
            <Grid x:Name="g1">

            </Grid>
        </Grid>
    </Grid>
</UserControl>
