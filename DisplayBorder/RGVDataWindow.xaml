                            <Border Style="{StaticResource BorderTitle}" Margin="10,10,10,0"></Border>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#000075" FontSize="28">信息数据</TextBlock>
