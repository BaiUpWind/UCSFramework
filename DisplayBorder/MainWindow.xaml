                            <ColumnDefinition  ></ColumnDefinition>
                            <ColumnDefinition  ></ColumnDefinition>
                            <ColumnDefinition  ></ColumnDefinition>
                        </Grid.ColumnDefinitions>


                        <!--系统信息-->
                        <Border Background="#5b8dec" Margin="50 20 50 20" Opacity="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#5b8dec" ShadowDepth="10" BlurRadius="50" Opacity="0.8" Direction="270"/>
